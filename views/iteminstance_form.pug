extends layout

block content
  h1=title

  form(action="", method="POST")
    div.form-group
      label(for='item') Item:
      select#item.form-control(type='select' placeholder='Select Item' name="item" required='true')
        for item in item_list
          option(value=item._id, selected=(selected_item==item._id.toString() ? 'selected': false)) #{item.name}
    div.form-group
      label(for='serial_number') Serial Number:
      input#serial_number.form-control(type='text', placeholder='Item Serial Number', name='serial_number', required='true', value=(undefined===iteminstance ? '': iteminstance.serial_number))

    button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      for error in errors
        li!= error.msg