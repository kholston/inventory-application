extends layout

block content

  h1=title

  p #[strong Do you really want to delete this Item Instance?]

  div(style="margin-left:20px")
  
    p #[strong ID]: #{iteminstance._id}

    p #[strong Name]:
      a(href=iteminstance.item.url) #{iteminstance.item.name}

    p #[strong Serial Number]: #{iteminstance.serial_number}

  form(action="", method="POST")
    div.form-group
      input#id.form-control(type='hidden', name='id', required='true', value=iteminstance._id)

    button.btn.btn-primary(type='submit') Delete