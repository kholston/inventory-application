extends layout

block content
  h1 #{title}
  
  form(method="POST" action="")
    div.form-group
      label(for="name")
      input.form-control(type="text" placeholder="Manufacturer Name" name="name" value=(undefined===manufacturer ? "": manufacturer.name ) required='true')
      label(for="description")
      input.form-control(type="text" placeholder="Manufacturer Description" name="description" value=(undefined===manufacturer ? "": manufacturer.description ) required='true')
    button.btn.btn-primary(type="submit") Submit
  if errors
    ul
      for error in errors
        li!= error.msg