extends layout

block content

  h1 Delete Manufacturer: #{manufacturer.name}

  if manufacturer_items.length

    p #[strong Delete the following items before attempting to delete this manufacturer.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in manufacturer_items
        dt  
          a(href=item.url) #{item.name}
        dd #{item.description}

  else
    p Do you really want to delete this Manufacturer?

    form(method='POST' action='')
      div.form-group 
        input#id.form-control(type='hidden', name='id', required='true',value=manufacturer._id)
      
      button.btn.btn-primary(type='submit') Delete